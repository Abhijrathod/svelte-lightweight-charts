{
  "name": "svelte-lightweight-charts",
  "version": "1.0.0",
  "devDependencies": {
    "@tsconfig/svelte": "1.0.10",
    "@typescript-eslint/eslint-plugin": "4.15.1",
    "@typescript-eslint/parser": "4.15.1",
    "cross-env": "7.0.3",
    "css-loader": "5.0.1",
    "eslint": "7.20.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-svelte3": "3.1.1",
    "fork-ts-checker-webpack-plugin": "6.1.1",
    "gulp": "4.0.2",
    "gulp-rename": "2.0.0",
    "gulp-transform": "3.0.5",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "mini-css-extract-plugin": "1.3.4",
    "plugin-error": "1.0.1",
    "svelte": "3.31.2",
    "svelte-check": "1.3.0",
    "svelte-loader": "3.0.0",
    "svelte-preprocess": "4.6.9",
    "ts-loader": "8.0.4",
    "ts-node": "9.1.1",
    "tslib": "2.0.1",
    "typescript": "4.0.3",
    "webpack": "5.23.0",
    "webpack-cli": "4.5.0",
    "webpack-dev-server": "3.11.2"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc --project tsconfig.build.json && gulp build",
    "build-dev": "rm -rf ./src/package/dist && tsc --project tsconfig.build.json && gulp build",
    "start": "npm run build-dev && webpack serve --content-base public",
    "validate": "svelte-check"
  },
  "dependencies": {
    "gulp-typescript": "6.0.0-alpha.1",
    "lightweight-charts": "3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "svelte-check && lint-staged"
    }
  },
  "lint-staged": {
    "*.js|*.ts|*.svelte": "eslint --cache --fix"
  },
  "engines": {
    "node": ">=10.3.0"
  }
}
